<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buku_tetangga">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logobutangajaicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logobutangajaicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".KebijakanPrivasiActivity"></activity>
        <activity android:name=".JaminanActivity" />
        <activity android:name=".JaminanDepositActivity" />
        <activity android:name=".PetunjukPenggunaActivity" />
        <activity android:name=".DepositActivity" />
        <activity android:name=".UnverifyForgetPasswordActivity" />
        <activity android:name=".BookSewaActivity" />
        <activity android:name=".SewaActivity" />
        <activity android:name=".AddCategoryActivity" />
        <activity android:name=".AddBookActivity" />
        <activity android:name=".activities.BookActivity" />
        <activity android:name=".activities.SearchAddBookActivity" />
        <activity android:name=".AddDescBookActivity" />
        <activity android:name=".ForgetPasswordActivity" />
        <activity android:name=".Navbar" />
        <activity android:name=".VerifyActivity" />
        <activity
            android:name=".MainActivity2"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeSearch">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable2" />
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>