<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DC1857"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgv_profil"
                    android:layout_width="107dp"
                    android:layout_height="111dp"
                    android:contentDescription="desc"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:id="@+id/txtV_nama"
                    android:layout_gravity="center"
                    android:textColor="@color/colorLight"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Muhammad Rivaldin"/>

                <TextView
                    android:id="@+id/txtV_mahasiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="68dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Mahasiswa"
                    android:textColor="#E6E6E6"
                    android:textSize="15sp"
                    tools:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:background="@color/colorLight">
            <LinearLayout
                android:id="@+id/lL_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgV_alamat"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="19dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Alamat"
                    />

                <TextView
                    android:id="@+id/txtV_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="surabaya" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lL_alamat"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgV_telepon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="19dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Telepon"/>

                <TextView
                    android:id="@+id/txtV_telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="081" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lL_telepon"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgV_email"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="19dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Email"
                    />

                <TextView
                    android:id="@+id/txtV_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="xxx@gmail.com" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF0052"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Koleksi buku :"
                    android:textColor="@color/colorLight"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"/>
            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">
                <ImageButton
                    android:id="@+id/btn_addBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="toAddBook"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add_book_akun"/>
            </LinearLayout>

        <Button
            android:id="@+id/btn_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
